<?xml version="1.0"?>
<project name="build" basedir="." default="do.archive">
	<!-- dynamic values for build -->
	<tstamp prefix="start"/>
	<property name="project.name" value="HTMLCompressor" />
	
	<!-- Init -->
	<target name="init" description="Init">
		<!-- Version -->
		<input addproperty="version" message="Project Version" />
	</target>

	<target name="cleanALL">
  		<delete>
			<fileset dir="." includes="${project.name}-*.zip"/>
		</delete>
	</target>
		
	<target name="do.archive" depends="init,cleanALL">
		<copy file="readme.txt" tofile="modules/HTMLCompressor/readme.txt" overwrite="true" />
		<copy file="APACHE_LICENSE.TXT" tofile="modules/HTMLCompressor/APACHE_LICENSE.TXT" overwrite="true" />
		
		<zip destfile="builds/HTMLCompressor_${version}.zip">
			<fileset dir="modules">
				<exclude name="build.xml"/>
				<exclude name="java/**"/>
				<exclude name=".DS_Store"/>
			</fileset>
		</zip>
	</target>

</project>
